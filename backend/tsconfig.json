{
  "compilerOptions": {
    "target": "ES2020",           // Latest ECMAScript features
    "module": "CommonJS",         // For Node.js
    "outDir": "./dist",           // Output folder for compiled JS
    "rootDir": "./src",           // Source folder for TypeScript
    "strict": true,               // Enable all strict type-checking
    "esModuleInterop": true,      // Allow default imports
    "skipLibCheck": true,         // Skip type checks for node_modules
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
